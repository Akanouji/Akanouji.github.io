const animeData = [
  { title: 'Naruto', active: true },
  { title: 'One Piece', active: true },
  { title: 'Attack on Titan', active: true },
  // Add more anime data as needed
];

// Function to display active anime
function displayActiveAnime() {
  const animeList = document.getElementById('animeList');
  animeData.forEach(anime => {
    if (anime.active) {
      const animeItem = document.createElement('div');
      animeItem.textContent = anime.title;
      animeList.appendChild(animeItem);
    }
  });
}

// Call the function to display active anime when the page loads
window.onload = displayActiveAnime;
